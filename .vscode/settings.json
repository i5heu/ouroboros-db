{
    "go.lintTool": "golangci-lint-v2",
    "go.lintFlags": [
        "--path-mode=abs",
        "--config=${workspaceFolder}/.golangci.yml"
        // "--fast-only"
    ],
    "go.lintOnSave": "package",
    "go.formatTool": "custom",
    "go.alternateTools": {
        "customFormatter": "golangci-lint-v2"
    },
    "go.formatFlags": [
        "fmt",
        "--stdin"
    ],
    "[go]": {
        "editor.rulers": [
            80
        ],
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true
    },
    "cSpell.words": [
        "boxo",
        "Buzhash",
        "cespare",
        "chunker",
        "Ciphertext",
        "cyclop",
        "dgraph",
        "Encryptor",
        "errcheck",
        "gofmt",
        "gofumpt",
        "goimports",
        "golines",
        "gosec",
        "govet",
        "ineffassign",
        "ipfs",
        "klauspost",
        "lmittmann",
        "nolint",
        "pgregory",
        "reedsolomon",
        "sloglint",
        "staticcheck",
        "structpb",
        "Zstandard"
    ]
}